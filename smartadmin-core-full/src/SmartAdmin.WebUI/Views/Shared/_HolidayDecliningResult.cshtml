<div class="modal modal-alert fade" id="holiday-decline-result-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><label id="decline-header-text"></label></h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="@(Settings.Theme.IconPrefix) fa-times"></i></span>
                    </button>*@
            </div>
            <div class="modal-body">
                <div id="decline-success-div">
                    <label id="holiday-decline-success-string">Holiday request from&nbsp;</label><label class="text-success md-header" id="holiday-decline-success-dates"></label>&nbsp;has been successfully declined.
