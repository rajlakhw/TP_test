@page
@model CreatePasswordModel


<h1>@ViewData["Title"]</h1>
<div class="col-xl-6 ml-auto mr-auto">
    <div class="card p-3 rounded-plus bg-faded">
        <h4>Create your password.</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form method="post" id="js-login">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Input.Code" type="hidden" />
                    <input asp-for="Input.Email" type="hidden" />
                    <div class="form-group">
                        <label>Username</label>
                        <input disabled value="@Model.Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="help-block">Your password must be 6 to 20 characters long, contain at least one lower-case letter, one upper-case letter, and one number/special character .</div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 text-right">
                        <button id="js-submit-btn" type="submit" class="btn btn-success">Create password and login</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#js-submit-btn").click(function (event) {
            // Fetch form to apply custom Bootstrap validation
            var form = $("#js-login");

            if (form[0].checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
            }

            form.addClass('was-validated');
            // Perform ajax submit here...
        });
    </script>
}
